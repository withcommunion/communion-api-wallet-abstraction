{
  "compilerOptions": {
    "strict": true,
    // "baseUrl": ".",
    // "paths": {
    //   // Enables absolute path @/
    //   "@/*": ["./src/*"]
    // },
    "outDir": "build",
    "module": "CommonJS",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    // "isolatedModules": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "./src/**/*.ts"],
  "exclude": ["node_modules", "lib", "out"]
}
