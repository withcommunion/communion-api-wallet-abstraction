{
  "name": "communion-api-wallet-abstraction",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint src/",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "deploy:dev": "yarn build && sls deploy --stage dev --aws-profile communion --verbose",
    "deploy:prod": "yarn build && sls deploy --stage prod --aws-profile communion --verbose",
    "deploy-ci:dev": "sls deploy --stage dev --verbose",
    "deploy-ci:prod": "sls deploy --stage prod --verbose",
    "invoke:getSelf": "serverless invoke local --function getSelf --stage dev --path ./invokeLocalEvents/getSelfEvent.json",
    "invoke:postConfirmationCreateUserWallet": "serverless invoke local --function postConfirmationCreateUserWallet --stage dev --path ./invokeLocalEvents/postConfirmationCognitoEvent.json"
  },
  "dependencies": {
    "@avalabs/avalanche-wallet-sdk": "^0.17.2",
    "@aws-sdk/client-dynamodb": "^3.87.0",
    "@aws-sdk/lib-dynamodb": "^3.87.0",
    "aws-lambda": "^1.0.7",
    "ethers": "^5.6.5",
    "lambda-log": "^3.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.95",
    "@types/jest": "^27.5.0",
    "@types/node": "17.0.30",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "avalanche": "^3.14.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "prettier": "^2.6.2",
    "serverless": "^3.16.0",
    "serverless-bundle": "^5.3.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "4.6.4"
  }
}
